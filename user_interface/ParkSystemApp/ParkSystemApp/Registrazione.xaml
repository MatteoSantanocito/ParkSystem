<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkSystemApp.Registrazione"
             Title="Registrazione"
             BackgroundColor="#D99B9B">

    <VerticalStackLayout VerticalOptions="Center">

        <Image
            Source="Logo1.PNG"
            WidthRequest="100"
            HeightRequest="100"
            HorizontalOptions="Center"
            Margin="0,5,0,0" />

        <Label
            Text="Park System"
            FontSize="Large"
            HorizontalOptions="Center"
            TextColor="White"
            Margin="0,10,0,0" />

        <!-- NOME -->
        <Entry 
            x:Name="NomeEntry"
            Placeholder="Nome"
            TextColor="Black"
            BackgroundColor="White"
            Margin="40,25,40,0" />

        <!-- COGNOME -->
        <Entry 
            x:Name="CognomeEntry"
            Placeholder="Cognome"
            TextColor="Black"
            BackgroundColor="White"
            Margin="40,25,40,0" />

        <!-- TIPO DI AVVENTURA (PICKER) -->
        <Picker 
            x:Name="TipoAvventuraPicker"
            Title="Seleziona Tipo di Avventura"
            TextColor="Black"
            BackgroundColor="White"
            Margin="40,25,40,0">
            <!-- Esempio di voci fisse. Volendo puoi popolare dinamicamente questa lista. -->
            <Picker.Items>
                <x:String>Famiglia</x:String>
                <x:String>Intermedia</x:String>
                <x:String>Estrema</x:String>
            </Picker.Items>
        </Picker>

        <!-- EMAIL -->
        <Entry 
            x:Name="EmailEntry"
            Placeholder="Email"
            TextColor="Black"
            BackgroundColor="White"
            Margin="40,25,40,0" />

        <!-- PASSWORD -->
        <Entry 
            x:Name="PasswordEntry"
            Placeholder="Password"
            IsPassword="True"
            TextColor="Black"
            BackgroundColor="White"
            Margin="40,25,40,0" />

        <!-- CONFERMA PASSWORD -->
        <Entry 
            x:Name="ConfermaPasswordEntry"
            Placeholder="Conferma Password"
            IsPassword="True"
            TextColor="Black"
            BackgroundColor="White"
            Margin="40,25,40,0" />

        <!-- BOTTONE REGISTRAZIONE -->
        <Button 
            Text="Registrati"
            BackgroundColor="Red"
            TextColor="White"
            Margin="100,15,100,30"
            Clicked="ButtonRegistrati_Clicked" />

        <Label 
            Text="GiÃ  Registrato?"
            HorizontalOptions="Center"
            TextColor="White" />

        <!-- BOTTONE LOGIN -->
        <Button 
            Text="Login"
            HorizontalOptions="Center"
            Clicked="Button_Clicked"
            Margin="100,15,100,15"/>
    </VerticalStackLayout>

</ContentPage>
