<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ParkSystemApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ParkSystemApp"
    Shell.FlyoutBehavior="Flyout"
    Title="ParkSystemApp"
    NavBarIsVisible="False"
    
    >

        <ShellContent Title="Main"
                      ContentTemplate="{DataTemplate local:MainPage}"
                      Route="MainPage" />
        <ShellContent Title="Login"
                      ContentTemplate="{DataTemplate local:Login}"
                      Route="Login"/>
        <ShellContent Title="Registrazione"
                      ContentTemplate="{DataTemplate local:Registrazione}"
                      Route="Registrazione"/>

</Shell>
