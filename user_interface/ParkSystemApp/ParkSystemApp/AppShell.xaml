<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ParkSystemApp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ParkSystemApp"
    Shell.FlyoutBehavior="Flyout"
    Title="ParkSystemApp"
    NavBarIsVisible="False"
    
    >

        <ShellContent Title="MainAdmin"
                      ContentTemplate="{DataTemplate local:MainPageAdmin}"
                      Route="MainPageAdmin" />
    
        <ShellContent Title="Main"
                      ContentTemplate="{DataTemplate local:MainPage}"
                      Route="MainPage" />
    
        <ShellContent Title="Login"
                      ContentTemplate="{DataTemplate local:Login}"
                      Route="Login"/>

        <ShellContent Title="Registrazione"
                          ContentTemplate="{DataTemplate local:Registrazione}"
                          Route="Registrazione"/>
    
        <ShellContent Route="FriendshipPage" 
                      ContentTemplate="{DataTemplate local:FriendshipPage}" />


        <ShellContent Title="AttrazioneAdmin"
                      ContentTemplate="{DataTemplate local:AttrazionePageAdmin}"
                      Route="AttrazionePageAdmin"/>

        <ShellContent Title="ProfiloAdmin"
                      ContentTemplate="{DataTemplate local:ProfiloAdmin}"
                      Route="ProfiloAdmin" />
</Shell>
