<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="ParkSystemApp.ChangePasswordPage"
    Title="Cambia Password">

    <VerticalStackLayout Margin="20">
        <Label Text="Vecchia Password"
               FontAttributes="Bold"
               FontSize="14" />
        <Entry x:Name="OldPasswordEntry"
               IsPassword="True"
               Placeholder="Vecchia Password" />

        <Label Text="Nuova Password"
               FontAttributes="Bold"
               FontSize="14"
               Margin="0,10,0,0" />
        <Entry x:Name="NewPasswordEntry"
               IsPassword="True"
               Placeholder="Nuova Password" />

        <Label Text="Conferma Nuova Password"
               FontAttributes="Bold"
               FontSize="14"
               Margin="0,10,0,0" />
        <Entry x:Name="ConfirmNewPasswordEntry"
               IsPassword="True"
               Placeholder="Conferma Nuova Password" />

        <Button Text="Salva"
                Margin="0,20,0,0"
                Clicked="OnSalvaClicked" />

        <Button Text="Annulla"
                Margin="0,10,0,0"
                Clicked="OnAnnullaClicked" />
    </VerticalStackLayout>
</ContentPage>
