<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ParkSystemApp.AttrazionePageAdmin"
             Title="AttrazionePageAdmin"
             BackgroundColor="#D99B9B">

    <Grid RowDefinitions="3*, 1*">
        <!-- Grid per le informazioni della giostra -->
        <ScrollView Grid.Row="0">
            <VerticalStackLayout Padding="20">
                <Label Text="{Binding Nome}"
                       FontSize="45"
                       HorizontalOptions="Center"
                       Padding="10"/>
                <Image Source="{Binding ImagePath}"
                       HorizontalOptions="Center"
                       HeightRequest="200"
                       WidthRequest="200"/>
                <Label Text="{Binding Descrizione}"
                       FontSize="25"
                       HorizontalOptions="Center"
                       Padding="0,10,0,10"/>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="10">
                    <Label Text="Tipologia: "
                           FontSize="25"/>
                    <Label Text="{Binding Tipologia}"
                           FontSize="25"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="10">
                    <Label Text="Tematica: "
                           FontSize="25"/>
                    <Label Text="{Binding Tematica}"
                           FontSize="25"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="10">
                    <Label Text="Eta minima: "
                           FontSize="25"/>
                    <Label Text="{Binding MinimumAge}"
                           FontSize="25"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="10">
                    <Label Text="Stato Attrazione: "
                           FontSize="25"/>
                    <Label Text="{Binding State}"
                           FontSize="25"/>
                </StackLayout>
                <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Padding="10">
                    <Label Text="Capacita oraria: "
                           FontSize="25"/>
                    <Label Text="{Binding HourCapacity}"
                           FontSize="25"/>
                </StackLayout>
            </VerticalStackLayout>
        </ScrollView>

        
        <!-- Grid per i pulsanti di navigazione, ancorata in basso -->
        <Grid Grid.Row="1" VerticalOptions="End">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Text="&#xe88a;"
                    FontFamily="MaterialIcons"
                    FontSize="20"
                    TextColor="Black"
                    BackgroundColor="Transparent"
                    Clicked="OnBackToMainPageClicked" />
            <Button Grid.Column="1"
                    Text="&#xe838;"
                    FontFamily="MaterialIcons"
                    FontSize="20"
                    TextColor="Black"
                    BackgroundColor="Transparent"/>
            <Button Grid.Column="2"
                    Text="&#xe7fd;"
                    FontFamily="MaterialIcons"
                    FontSize="20"
                    TextColor="Black"
                    BackgroundColor="Transparent"
                    Clicked="OnProfileClicked"/>
        </Grid>
    </Grid>

</ContentPage>
